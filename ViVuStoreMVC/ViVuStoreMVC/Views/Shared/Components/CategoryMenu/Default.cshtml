@model IEnumerable<Category>

<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" role="button" data-toggle="dropdown"
       aria-haspopup="true" aria-expanded="false" asp-controller="Books"
       asp-action="Index">
        Danh Mục Sách
    </a>

    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        @foreach (var category in Model)
        {
            <a class="dropdown-item" asp-controller="Books"
               asp-action="List" asp-route-category="@category.Name">
                @category.Name
            </a>
        }
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" asp-controller="Books" asp-action="List"
           asp-route-category="">Tất Cả</a>
    </div>
</li>