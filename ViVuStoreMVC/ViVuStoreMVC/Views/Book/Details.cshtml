@model Book

@{
    ViewData["Title"] = $"{Model.Title} | ViVuStore.vn";
}

<div class="container product-container">
    <div class="row">
        <div class="product-image">
            <img class="img-thumbnail" src="@Model.ImageThumbnailUrl"
                 alt="@Model.Title" />
        </div>
        <div class="product-cart">
            <h2>@Model.Title</h2>
            <h4>
                @Model.Price.ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN"))
            </h4>
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart" asp-route-bookId="@Model.Id">
                    <span class="fas fa-shopping-cart"></span> CHỌN MUA
                </a>
            </p>

            <p class="description">@Model.Description</p>
        </div>
    </div>
</div>