@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng Ký";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Input.Name"></label>
                <div class="col-sm-10">
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Input.Sex"></label>
                <div class="col-sm-10">
                    <input asp-for="Input.Sex" class="form-control" />
                    <span asp-validation-for="Input.Sex" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Input.DateOfBirth"></label>
                <div class="col-sm-10">
                    <input asp-for="Input.DateOfBirth" class="form-control" type="date" />
                    <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Input.City"></label>
                <div class="col-sm-10">
                    <input asp-for="Input.City" class="form-control" />
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Input.PhoneNumber"></label>
                <div class="col-sm-10">
                    <input asp-for="Input.PhoneNumber" class="form-control" type="number" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Input.Email"></label>
                <div class="col-sm-10">
                    <input asp-for="Input.Email" class="form-control" type="email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Input.Password"></label>
                <div class="col-sm-10">
                    <input asp-for="Input.Password" class="form-control" type="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Input.ConfirmPassword"></label>
                <div class="col-sm-10">
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-info">Đăng Ký</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
