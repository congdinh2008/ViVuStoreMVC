@model IEnumerable<BookStore.Components.PriceSearchItem>

<div class="card">
    <h5 class="mb-0">
        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseOne">
            Tìm Theo Giá
        </button>
    </h5>

    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
        <ul class="list-group">
            @foreach (var item in Model)
            {
                <li class="list-group-item">
                    <a class="item" asp-controller="Book"
                       asp-action="ListByPrice" asp-route-priceLevel="@item.ActionValue">
                        < @item.DisplayValue.ToString("C0",CultureInfo.CreateSpecificCulture("vi-VN"))
                    </a>
                </li>
            }
        </ul>
    </div>
</div>