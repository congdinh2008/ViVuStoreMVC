@model BookEditViewModel

<h2>Cập nhật thông tin sách</h2>
<hr />
<form asp-controller="BookManagement" asp-action="EditBook" method="post" class="form-horizontal" role="form">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Book.Title" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Book.Title" class="form-control" />
            <span asp-validation-for="Book.Title" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Book.Description" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Book.Description" class="form-control" />
            <span asp-validation-for="Book.Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Book.ImageThumbnailUrl" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Book.ImageThumbnailUrl" class="form-control" />
            <span asp-validation-for="Book.ImageThumbnailUrl" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Book.NumberOfPages" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Book.NumberOfPages" class="form-control" />
            <span asp-validation-for="Book.NumberOfPages" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Book.Price" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Book.Price" class="form-control" />
            <span asp-validation-for="Book.Price" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Book.ReleaseDate" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Book.ReleaseDate" class="form-control" type="date" />
            <span asp-validation-for="Book.ReleaseDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Book.BookDimensions" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Book.BookDimensions" class="form-control" />
            <span asp-validation-for="Book.BookDimensions" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Book.IsBookOfTheWeek" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Book.IsBookOfTheWeek" class="form-control" />
            <span asp-validation-for="Book.IsBookOfTheWeek" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Book.Quantity" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Book.Quantity" class="form-control" />
            <span asp-validation-for="Book.Quantity" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Categories" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="CategoryId" class="form-control" asp-items="Model.Categories"></select>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Authors" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="AuthorId" class="form-control" asp-items="Model.Authors"></select>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Publishers" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="PublisherId" class="form-control" asp-items="Model.Publishers"></select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Cập nhật" />
        </div>
        <div class="col-md-offset-2 col-md-10">
            <input asp-controller="BookManagement" asp-action="Index" type="submit" class="btn btn-primary" value="Hủy" />
        </div>
    </div>
</form>